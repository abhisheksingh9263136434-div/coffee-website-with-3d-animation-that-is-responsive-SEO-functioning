{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch App (Localhost)",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Frontend (Static)",
            "file": "${workspaceFolder}/frontend/index.html"
        }
    ],
    "compounds": [
        {
            "name": "Start Full Stack App",
            "configurations": [
                "Launch Backend",
                "Launch App (Localhost)"
            ]
        }
    ]
}